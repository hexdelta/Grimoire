<?xml version="1.0" encoding="utf-8" ?>
<Shell xmlns="http://schemas.microsoft.com/dotnet/2021/maui"
       xmlns:x="http://schemas.microsoft.com/winfx/2009/xaml"
       x:Class="Grimoire.AppShell">

    <!-- Define the Flyout structure for navigation -->
    <FlyoutItem Title="Recipes" Icon="icon_recipes.png">
        <ShellContent ContentTemplate="{DataTemplate local:MainPage}" />
    </FlyoutItem>

    <FlyoutItem Title="Ingredient Dictionary" Icon="icon_ingredients.png">
        <ShellContent ContentTemplate="{DataTemplate local:IngredientDictionaryPage}" />
    </FlyoutItem>

    <!-- Register Routes for Navigating to Pages -->
    <ShellContent Route="RecipeDetailPage" ContentTemplate="{DataTemplate local:RecipeDetailPage}" />
    <ShellContent Route="ShoppingListPage" ContentTemplate="{DataTemplate local:ShoppingListPage}" />
</Shell>
