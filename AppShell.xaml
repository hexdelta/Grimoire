<?xml version="1.0" encoding="utf-8" ?>
<Shell xmlns="http://schemas.microsoft.com/dotnet/2021/maui"
       xmlns:x="http://schemas.microsoft.com/winfx/2009/xaml"
       xmlns:local="clr-namespace:Grimoire" 
       xmlns:pages="clr-namespace:Grimoire.Pages" 
       x:Class="Grimoire.AppShell">


    <ShellContent Title="Main" ContentTemplate="{DataTemplate local:MainPage}" />
    <ShellContent Title="Ingredients" ContentTemplate="{DataTemplate pages:IngredientDictionaryPage}" />

    <ShellContent Route="RecipeDetailPage" ContentTemplate="{DataTemplate pages:RecipeDetailPage}" />
    <ShellContent Route="ShoppingListPage" ContentTemplate="{DataTemplate pages:ShoppingListPage}" />
</Shell>
