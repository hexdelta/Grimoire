<ContentPage xmlns="http://schemas.microsoft.com/dotnet/2021/maui"
             xmlns:x="http://schemas.microsoft.com/winfx/2009/xaml"
             x:Class="Grimoire.Pages.RecipeDetailPage"
             Title="Recipe Details">

    <StackLayout Padding="10">
        <!-- Recipe Name -->
        <Entry x:Name="RecipeNameEntry"
               Placeholder="Recipe Name"
               Text="{Binding Name, Mode=TwoWay}"
            FontSize="18"
               Margin="0,10"/>

            <!-- Recipe Source Link -->
            <Entry x:Name="RecipeLinkEntry"
               Placeholder="Source Link"
               Text="{Binding Link}"
                FontSize="14"
               Margin="0,10"/>

                <!-- Ingredients List -->
                <Label Text="Ingredients:"
               FontSize="18"
               Margin="0,10"/>

                <CollectionView ItemsSource="{Binding Ingredients}">
                    <!-- Bind to Ingredients -->
                    <CollectionView.ItemTemplate>
                        <DataTemplate>
                            <StackLayout Orientation="Horizontal" Margin="0,5">
                                <Label Text="{Binding .}"
                                    VerticalOptions="Center"/>
                            </StackLayout>
                        </DataTemplate>
                    </CollectionView.ItemTemplate>
                </CollectionView>

                <!-- Add new ingredient -->
                <Entry x:Name="IngredientEntry" 
               Placeholder="Enter ingredient" 
               Margin="0,10,0,10" />

                <Button Text="Add Ingredient"
                Clicked="OnAddIngredientClicked"
                HorizontalOptions="Center"
                Margin="0,10"/>

                <!-- Save Button -->
                <Button Text="Save Recipe"
                Clicked="OnSaveRecipeClicked"
                HorizontalOptions="Center"
                Margin="0,10"/>
    </StackLayout>
</ContentPage>
